{
  "name": "metapagekit",
  "displayName": "MetaPageKit",
  "description": "MetaP HTML page generator",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "metapagekit.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "metapagekit.addFile",
        "title": "Add file",
        "description": "Generates a new file based on a selected template and inserts it into the current folder."
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run copy-assets",
    "compile": "tsc -p ./",
    "copy-assets": "npx copyfiles -u 2 \"templates/*.*\" templates",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.100.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "copyfiles": "^2.4.1",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  }
}
